source 'https://rubygems.org'

gem 'rails', '4.1.6'

group :development, :test do
	gem 'sqlite3'
	gem 'rspec-rails'
end

group :test do
	gem 'selenium-webdriver'
	gem 'capybara'
end

gem 'sass-rails', '~> 4.0.3'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'

group :doc do
	gem 'sdoc', '~> 0.4.0', require: false
end

group :production do
	gem 'pg'
	gem 'rails_12factor'
end
